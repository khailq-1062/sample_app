<% provide :title, t(".subtitle") %>
<% if logged_in? %>
  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <%= render "shared/user_info" %>
      </section>
      <section class="micropost_form">
        <%= render "shared/micropost_form" %>
      </section>
    </aside>
    <div class="col-md-8">
      <h3><%= t ".feed" %></h3>
      <%= render "shared/feed" %>
    </div>
  </div>
<% else %>
  <div class="center jumbotron">
    <h1><%= t ".subtitle" %></h1>
    <h2>
      <%= t ".text1" %>
      <%= link_to t(".path_text1"), Settings.home.path_link %>
      <%= t ".text2" %>
    </h2>
    <%= link_to t(".path_text2"), signup_path, class: "btn btn-lg btn-primary" %>
  </div>
  <%= link_to image_tag(Settings.home.path_link1, alt: t(".alt_logo"), id: "logo",
    class: "img-size"), Settings.home.path_link %>
<% end %>
